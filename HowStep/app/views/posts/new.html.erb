<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
      <%= form_for @post, action: {method: 'create'} do |f| %>

          <%= f.label t('views.forms.posts.title') %>
          <%= f.text_field :title, class: 'form-control' %>

          <br>

          <%= f.submit t('views.forms.posts.create'), class: 'btn btn-success w-50' %>

      <% end %>
  </div>
  <div class="col-md-4"></div>
</div>