<div class="container">
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <div class="card text-center">
        <div class="card-header">
          <img src=<%= @user.image %>>
        </div>
          <div class="card-block">
            <h4 class="card-title"><%= @user.name %></h4>
            <p class="card-text"><%= @user.email %></p>
          </div>
          <div class="card-footer text-muted">
            <%= t('views.forms.user.count') + @user.posts.count.to_s %>
          </div>
        </div>
      <div class="card text-center">
        <div class="card-block">
          <h3>
            <%= t('views.forms.user.wall') %>
          </h3>
        </div>
      </div>
      <% if @user.posts.empty? %>
          <div class="card text-center">
            <div class="card-footer text-muted">
              <%= t('views.forms.posts.empty') %>
            </div>
          </div>
      <% else %>
        <%= render @user.posts %>
      <% end %>
      </div>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>