<div class="col-sm-6">
  <div class="card text-center">
    <div class="card-header">
      <img src=<%= user.image %>>
    </div>
    <div class="card-block">
      <h5 class="card-title"><%= user.name %></h5>
      <a class="btn btn-outline-info" href=<%= user_path(user) %>><%= t('views.forms.user.page') %></a>
      <% if can? :edit, user %>
        <a class="btn btn-outline-warning" href=<%= edit_user_path(user) %>><%= t('views.forms.user.posts.edit') %></a>
      <% end %>
    </div>
  </div>
</div>